pipeline {
    agent any
 tools {
        maven 'M3'
        jdk 'jdk'
    }
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Git Init') {
        steps{
            sh 'git init'
            }
        }
        stage('SCM Fetch') {
        steps{
            git branch: 'sc-staging', url: 'https://github.com/Kishanrampure/DevOps-Petclinic-Project.git'
            }
        }
        stage('Maven Install'){
        steps{
              sh "mvn clean install"
             }
        }
         stage('Docker Build') {
          steps {
                sh 'chmod +x mvnw'
                sh 'chmod +x ./mvnw'
                sh 'docker build -t kishanrampure/petclinic:v${BUILD_TIMESTAMP} .'
            }
        }
        stage('Docker Image Test'){
        steps {
                sh 'trivy image kishanrampure/petclinic:v${BUILD_TIMESTAMP}'
            }
        }
        stage('Trivy FS Check') {
        steps {
                sh "trivy fs ."
            }
        }
        stage('Push image to dockerhub') {
        steps {
          withCredentials([usernamePassword(credentialsId: 'docker-cred', passwordVariable: 'PASSWORD', usernameVariable: 'USERNAME')]) {
             sh 'docker login -u $USERNAME -p $PASSWORD'
             sh 'docker push kishanrampure/petclinic:v${BUILD_TIMESTAMP}'
          }
        }
      }
        stage('Git Push to deployment') {
	  environment {
                commitmsg = "'codeChangesSC'"
            }
        steps {
	       script{
                   withCredentials([
                    gitUsernamePassword(credentialsId: 'mygitid', gitToolName: 'Default')
                    ] ) {
                    sh '''
                    git add .
                    git branch -M deployment
		    git remote -v
                    git status
		    git commit -a -m ${commitmsg}
                    git push -u origin deployment --force
                    '''
                  } 
	       }
            }
        }
    } 
}
